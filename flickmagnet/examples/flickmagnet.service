[Unit]
Description=Flick Magnet Server
After=network.target

[Service]
User=flickmagnet
Group=flickmagnet

Type=simple
ExecStart=/usr/bin/pkexec env XDG_RUNTIME_DIR=/tmp/ /usr/bin/python3 /usr/lib/python3.5/site-packages/flickmagnet/flickmagnet.py

PrivateTmp=true

[Install]
WantedBy=multi-user.target
